<!DOCTYPE html>

<html lang="en">
    
  <head>

    <%-include('./partials/head') %>

      <title>All the Bosses!</title>

  </head>

  <body>  
  
    <span><a href="/">Home</a></span><br><br>

    <span><a href="/createOnemmBoss">Create a new Boss</a></span><br><br>


    <div class="all_bosses_container">

      <% mmBoss.forEach( (bs) => { %>
      
        <a href="/onemmBoss/<%=bs.Name%>">

          <img src="../public/images/<%=bs.Name%>.png" onerror="this.src='../public/images/Dr_Wily.png'"alt="<%=bs.Name%>">

        </a>

      <% }) %>

    </div>

    <div class="canvas_container">

      <canvas id="myCanvas"></canvas>

    </div>

    <% for (var i = 0; i < 1000; i++) { %>

    <div class="star" style="animation: scroll <%= Math.random() * 10 + 10 %>s linear infinite;"></div>

    <% } %>

    <script>
      function updatePositions() {
        const stars = document.querySelectorAll('.star');
        stars.forEach(star => {
          const x = Math.random() * window.innerWidth * 2;
          const y = Math.random() * window.innerHeight * 5;
          star.style.top = y + 'px';
          star.style.left = x + 'px';
        });
      }
      updatePositions();
      setInterval(updatePositions, 10000);
    </script>

  </body>
  
</html>